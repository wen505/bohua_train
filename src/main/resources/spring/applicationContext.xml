<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
			http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
			http://www.springframework.org/schema/context
			http://www.springframework.org/schema/context/spring-context-4.1.xsd http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd">

    <!--引入配置属性文件 -->
    <context:property-placeholder location="classpath:conf/jdbc.properties" ignore-unresolvable="true"/>

    <!--自动扫描含有@Service将其注入为bean -->
    <context:component-scan base-package="com.bh.train.service" />

    <aop:aspectj-autoproxy proxy-target-class="true"/>

    <import resource="applicationContext-ehcache.xml"/>

    <import resource="applicationContext-rabbit.xml"/>

</beans>